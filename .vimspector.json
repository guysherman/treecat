{
 "configurations": {
    "run": {
      "adapter": "vscode-node",
      "configuration": {
        "request": "launch",
        "protocol": "auto",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "program": "${workspaceRoot}/src/index.ts",
        "runtimeExecutable": "node",
        "runtimeArgs": ["--require", "${workspaceRoot}/.pnp.js"],
        "cwd": "${workspaceRoot}",
        "outFiles": ["${workspaceRoot}/dist/**/*.js"]
      }
    }
  }
} 
